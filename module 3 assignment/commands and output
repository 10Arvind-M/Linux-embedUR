vi backup_manager.sh
chmod +x backup_manager.sh
mkdir source_files
echo "hello" > source_files/a.txt
echo "world" > source_files/b.txt
echo "skip" > source_files/c.log
./backup_manager.sh source_files backup_folder txt
ls backup_folder
cat backup_folder/backup_report.log


